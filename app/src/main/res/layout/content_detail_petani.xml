<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="50dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:src="@color/black"
        tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/nama_petani"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Vidjaretha Wardana"
            android:textSize="28sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Status : Petani (Pemilik Lahan)"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/keahlian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Keahlian : Bertani Padi"
                    android:textSize="18sp"  />

                <TextView
                    android:id="@+id/domisili"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Domisili : Karangasem"
                    android:textSize="18sp"  />

                <TextView
                    android:id="@+id/pengalaman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Pengalaman Kerja : 10 tahun"
                    android:textSize="18sp"  />

                <TextView
                    android:id="@+id/no_telp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="No Telp : 085123345221"
                    android:textSize="18sp"  />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Keterangan : "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Saya seorang petani padi, saya memiliki lahan pertanian sebesar 5 hektar di daerah Karangasem."
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>